{
    "compilerOptions": {
        "target": "es2020", 
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true, 
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": ["./src"],
}